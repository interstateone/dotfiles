# vi-mode for non-terminal applications
# remap left-control h/j/k/l -> arrow keys
lctrl - h         ![HyperTerm,Terminal,iTerm2,AppCode-EAP,AppCode]      :   khd -p "- left"
lctrl - j         ![HyperTerm,Terminal,iTerm2,AppCode-EAP,AppCode]      :   khd -p "- down"
lctrl - k         ![HyperTerm,Terminal,iTerm2,AppCode-EAP,AppCode]      :   khd -p "- up"
lctrl - l         ![HyperTerm,Terminal,iTerm2,AppCode-EAP,AppCode]      :   khd -p "- right"

shift + lctrl - h ![HyperTerm,Terminal,iTerm2,AppCode-EAP,AppCode]      :   khd -p "shift - left"
shift + lctrl - j ![HyperTerm,Terminal,iTerm2,AppCode-EAP,AppCode]      :   khd -p "shift - down"
shift + lctrl - k ![HyperTerm,Terminal,iTerm2,AppCode-EAP,AppCode]      :   khd -p "shift - up"
shift + lctrl - l ![HyperTerm,Terminal,iTerm2,AppCode-EAP,AppCode]      :   khd -p "shift - right"

# set border color for different modes
khd mode default on_enter kwmc config border focused color 0xFFB5BD68
khd mode switcher on_enter kwmc config border focused color 0XFFDE935F
khd mode move on_enter kwmc config border focused color 0XFFB294BB

# toggle between modes
ctrl - f                :   khd -e "mode activate switcher"
switcher + ctrl - f     :   khd -e "mode activate default"
switcher - m            :   khd -e "mode activate move"
move + ctrl - f         :   khd -e "mode activate default"
move - m                :   khd -e "mode activate default"

# switcher mode
switcher - r            :   khd -e "reload"; kwmc config reload

# Open terminal
switcher - return       :   open -na /Applications/Utilities/Terminal.app;\
                            khd -e "mode activate default"

# Cycle window focus
alt + shift - h           :   kwmc window -f west
alt + shift - l           :   kwmc window -f east
alt + shift - j           :   kwmc window -f south
alt + shift - k           :   kwmc window -f north
alt + shift - i           :   kwmc window -s next
alt + shift - o           :   kwmc window -s prev
alt + shift - t           :   kwmc window -t focused

# Focus space
ctrl - 1            :   kwmc space -fExperimental 1
ctrl - 2            :   kwmc space -fExperimental 2
ctrl - 3            :   kwmc space -fExperimental 3
ctrl - 4            :   kwmc space -fExperimental 4
ctrl - 5            :   kwmc space -fExperimental 5

# Throw window to space
alt + shift + lctrl - 1     :   kwmc window -m space 1; kwmc space -fExperimental 1
alt + shift + lctrl - 2     :   kwmc window -m space 2; kwmc space -fExperimental 2
alt + shift + lctrl - 3     :   kwmc window -m space 3; kwmc space -fExperimental 3
alt + shift + lctrl - 4     :   kwmc window -m space 4; kwmc space -fExperimental 4
alt + shift + lctrl - 5     :   kwmc window -m space 5; kwmc space -fExperimental 5

# Move window
move - h        :   /Users/brandon/bin/move-window west
move - j        :   /Users/brandon/bin/move-window south
move - k        :   /Users/brandon/bin/move-window north
move - l        :   /Users/brandon/bin/move-window east

# Focus display
switcher - 1    :   kwmc display -f 0; khd -e "mode activate default"
switcher - 2    :   kwmc display -f 1; khd -e "mode activate default"
switcher - 3    :   kwmc display -f 2; khd -e "mode activate default"

# Swap window to display
shift + switcher - 1        :   kwmc window -m display 0; khd -e "mode activate default"
shift + switcher - 2        :   kwmc window -m display 1; khd -e "mode activate default"
shift + switcher - 3        :   kwmc window -m display 2; khd -e "mode activate default"

# Spaces
lalt + lshift - a               :   kwmc space -t bsp
lalt + lshift - s               :   kwmc space -t monocle
lalt + lshift - d               :   kwmc space -t float

lalt + lshift - x               :   kwmc space -g increase horizontal
lalt + lshift - y               :   kwmc space -g increase vertical

lalt + lshift + lctrl - x       :   kwmc space -g decrease horizontal
lalt + lshift + lctrl - y       :   kwmc space -g decrease vertical

# Window mode
alt + shift - f                :   kwmc window -z fullscreen
alt + shift - d                :   kwmc window -z parent
alt + shift - w                :   kwmc window -t focused
alt + shift - r                :   kwmc tree rotate 90

# Window size
alt + shift + lctrl - h  :   kwmc window -c expand 0.05 west
alt + shift + lctrl - j  :   kwmc window -c expand 0.05 south
alt + shift + lctrl - k  :   kwmc window -c expand 0.05 north
alt + shift + lctrl - l  :   kwmc window -c expand 0.05 east
lcmd + shift + lctrl - h  :   kwmc window -c reduce 0.05 east
lcmd + shift + lctrl - j  :   kwmc window -c reduce 0.05 north
lcmd + shift + lctrl - k  :   kwmc window -c reduce 0.05 south
lcmd + shift + lctrl - l  :   kwmc window -c reduce 0.05 west

# default
cmd + alt + ctrl - m    :   kwmc window -mk focused
cmd + alt + ctrl - h    :   kwmc window -mk west wrap
cmd + alt + ctrl - l    :   kwmc window -mk east wrap
cmd + alt + ctrl - j    :   kwmc window -mk south wrap
cmd + alt + ctrl - k    :   kwmc window -mk north wrap

