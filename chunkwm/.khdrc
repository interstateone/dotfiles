# vi-mode for non-terminal applications
# remap left-control h/j/k/l -> arrow keys
lctrl - h         ![HyperTerm,Terminal,iTerm2,AppCode-EAP,AppCode]      :   khd -p "- left"
lctrl - j         ![HyperTerm,Terminal,iTerm2,AppCode-EAP,AppCode]      :   khd -p "- down"
lctrl - k         ![HyperTerm,Terminal,iTerm2,AppCode-EAP,AppCode]      :   khd -p "- up"
lctrl - l         ![HyperTerm,Terminal,iTerm2,AppCode-EAP,AppCode]      :   khd -p "- right"

shift + lctrl - h ![HyperTerm,Terminal,iTerm2,AppCode-EAP,AppCode]      :   khd -p "shift - left"
shift + lctrl - j ![HyperTerm,Terminal,iTerm2,AppCode-EAP,AppCode]      :   khd -p "shift - down"
shift + lctrl - k ![HyperTerm,Terminal,iTerm2,AppCode-EAP,AppCode]      :   khd -p "shift - up"
shift + lctrl - l ![HyperTerm,Terminal,iTerm2,AppCode-EAP,AppCode]      :   khd -p "shift - right"

# Workaround for window borders being caught by Grab
cmd + shift - 4 -> : chunkc border::clear

# toggle between modes
ctrl - f                :   khd -e "mode activate switcher"
switcher + ctrl - f     :   khd -e "mode activate default"
switcher - m            :   khd -e "mode activate move"
move + ctrl - f         :   khd -e "mode activate default"
move - m                :   khd -e "mode activate default"

# switcher mode
switcher - r            :   khd -e "reload"; kwmc config reload

# Open terminal
switcher - return       :   open -na /Applications/Utilities/Terminal.app;\
                            khd -e "mode activate default"

# Manage Dell display
ctrl + shift - f1                 :   /Users/brandon/bin/dellctl down
ctrl + shift - f2                 :   /Users/brandon/bin/dellctl up

# Adjust grid
move - p              :   chunkc tiling::desktop --padding inc
move + shift - p      :   chunkc tiling::desktop --padding dec

move - g              :   chunkc tiling::desktop --gap inc
move +shift - g       :   chunkc tiling::desktop --gap dec

# Cycle window focus
alt + shift - h           :   chunkc tiling::window --focus west
alt + shift - l           :   chunkc tiling::window --focus east
alt + shift - j           :   chunkc tiling::window --focus south
alt + shift - k           :   chunkc tiling::window --focus north
alt + shift - i           :   chunkc tiling::window --swap next
alt + shift - o           :   chunkc tiling::window --swap prev
alt + shift - w           :   chunkc tiling::window --toggle float
alt + shift - f           :   chunkc tiling::window --toggle fullscreen
alt + shift - r           :   chunkc tiling::desktop --rotate 90

# Throw window to desktop
alt + shift + lctrl - 1     :   chunkc tiling::window -d 1; khd -p "ctrl - 1"
alt + shift + lctrl - 2     :   chunkc tiling::window -d 2; khd -p "ctrl - 2"
alt + shift + lctrl - 3     :   chunkc tiling::window -d 3; khd -p "ctrl - 3"
alt + shift + lctrl - 4     :   chunkc tiling::window -d 4; khd -p "ctrl - 4"
alt + shift + lctrl - 5     :   chunkc tiling::window -d 5; khd -p "ctrl - 5"

# Focus display
switcher - 1    :   chunkc tiling::monitor -f 1; khd -e "mode activate default"
switcher - 2    :   chunkc tiling::monitor -f 2; khd -e "mode activate default"
switcher - 3    :   chunkc tiling::monitor -f 3; khd -e "mode activate default"

# Swap window to display
shift + switcher - 1        :   chunkc tiling::window --send-to-monitor 1; chunkc tiling::monitor -f 1; khd -e "mode activate default"
shift + switcher - 2        :   chunkc tiling::window --send-to-monitor 1; chunkc tiling::monitor -f 1; khd -e "mode activate default"
shift + switcher - 3        :   chunkc tiling::window --send-to-monitor 1; chunkc tiling::monitor -f 1; khd -e "mode activate default"

# Desktop mode
lalt + lshift - a               :   chunkc tiling::desktop --layout bsp
lalt + lshift - s               :   chunkc tiling::desktop --layout monocle
lalt + lshift - d               :   chunkc tiling::desktop --layout float

# Window size
alt + shift + lctrl - h  :   chunkc tiling::window --use-temporary-ratio 0.05 --adjust-window-edge west; chunkc tiling::window --use-temporary-ratio -0.05 --adjust-window-edge east
alt + shift + lctrl - j  :   chunkc tiling::window --use-temporary-ratio 0.05 --adjust-window-edge south; chunkc tiling::window --use-temporary-ratio -0.05 --adjust-window-edge north
alt + shift + lctrl - k  :   chunkc tiling::window --use-temporary-ratio 0.05 --adjust-window-edge north; chunkc tiling::window --use-temporary-ratio -0.05 --adjust-window-edge south
alt + shift + lctrl - l  :   chunkc tiling::window --use-temporary-ratio 0.05 --adjust-window-edge east; chunkc tiling::window --use-temporary-ratio -0.05 --adjust-window-edge west

